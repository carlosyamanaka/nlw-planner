generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  id           String   @id @default(uuid()) //uuid é um id grande e ta sendo setado como pk no @id
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean  @default(false)
  created_at   DateTime @default(now())

  participants Participant[]

  @@map("trips") //mapear pra trocar o nome, como no prisma só aceita letra maiuscula usa isso
}

model Participant {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)

  trip    Trip   @relation(fields: [trip_id], references: [id])
  trip_id String

  @@map("participants")
}
